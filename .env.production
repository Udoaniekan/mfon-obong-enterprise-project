# Production Environment Variables
# Database
MONGODB_URI=mongodb://localhost:27017/mfon-obong-production
# or your production MongoDB connection string

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-production-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-for-production-at-least-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (optional - for enhanced security)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Application
NODE_ENV=production
PORT=5000
API_URL=https://your-domain.com/api

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.com

# Security
BCRYPT_ROUNDS=12

# File Upload (if using)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email (if configured)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100